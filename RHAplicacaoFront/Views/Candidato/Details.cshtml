@model RHAplicacaoFront.Models.Candidato

@{
    ViewBag.Title = "Detalhes Candidato";
}

<br />
<h2>Detalhes Candidato</h2>
<br />

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VagaID_FK)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vaga.DescricaoVaga)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        @if (Model.CheckBoxItems.Count > 0)
        {
            <dt>
                <label>Tecnologias</label>
            </dt>
            foreach (var item in Model.CheckBoxItems)
            {
                if (item.Checked == true)
                {
                    <dd style="height:20px !important">
                        @Html.DisplayFor(model => item.ItemName)
                    </dd>
                }
            }
        }

    </dl>
</div>
<p>
    <a href="@Url.Action("Index", "Candidato")" class="btn btn-primary btn-xs">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Voltar
    </a>
    <a href="@Url.Action("Edit", "Candidato", new { id = Model.Id })" class="btn btn-success btn-xs">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Editar
    </a>

</p>
