@model RHAplicacaoFront.Models.Candidato

@{
    ViewBag.Title = "Excluir Candidato";
}

<br />
<h2>Excluir Candidato</h2>
<br />

<h3>Deseja realmente excluir esse registro?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VagaID_FK)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vaga.DescricaoVaga)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        @if (Model.CheckBoxItems.Count > 0)
        {
            <dt>
                <label>Tecnologias</label>
            </dt>
            foreach (var item in Model.CheckBoxItems)
            {
                if (item.Checked == true)
                {
                    <dd style="height:20px !important">
                        @Html.DisplayFor(model => item.ItemName)
                    </dd>
                }
            }
        }

    </dl>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <button type="submit" value="Excluir" class="btn btn-danger btn-sm">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                Excluir
            </button>
        }
    </div>
</div>
<p>
    <a href="@Url.Action("Index", "Candidato")" class="btn btn-primary btn-xs">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Voltar
    </a>

</p>
