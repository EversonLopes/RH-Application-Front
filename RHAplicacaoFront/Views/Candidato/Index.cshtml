@model IEnumerable<RHAplicacaoFront.Models.Candidato>

@{
    ViewBag.Title = "Candidatos";
}

<br />
<h2>Candidatos</h2>
<br /><br />
<p>
    <a href="@Url.Action("Create", "Candidato")" class="btn btn-success btn-xs">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Cadastrar
    </a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaga.DescricaoVaga)
            </th>
            <th>
                Opções
            </th>
        </tr>
    </thead>
    <tbody>

        @if(Model.Count() > 0 && Model != null){
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vaga.DescricaoVaga)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Candidato", new { id = item.Id })" class="btn btn-success btn-xs">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Editar
                        </a>
                        <a href="@Url.Action("Details", "Candidato", new { id = item.Id })" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                            Detalhes
                        </a>
                        <a href="@Url.Action("Delete", "Candidato", new { id = item.Id })" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        }


    </tbody>


</table>

