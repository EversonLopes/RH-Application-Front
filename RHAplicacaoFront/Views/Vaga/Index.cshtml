@model IEnumerable<RHAplicacaoFront.Models.Vaga>

@{
    ViewBag.Title = "Vagas";
}

<br />
<h2>Vagas</h2>
<br />
<br />

<p>
    <a href="@Url.Action("Create", "Vaga")" class="btn btn-success btn-xs">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Cadastrar
    </a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VagaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoVaga)
            </th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VagaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescricaoVaga)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Vaga", new { id = item.VagaId })" class="btn btn-success btn-xs">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Editar
                        </a>
                        <a href="@Url.Action("Details", "Vaga", new { id = item.VagaId })" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                            Detalhes
                        </a>
                        <a href="@Url.Action("Delete", "Vaga", new { id = item.VagaId })" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            Excluir
                        </a>
                        @if (item.VagasTecnologias.Count > 0)
                        {
                            <a href="@Url.Action("Triagem", "Vaga", new { id = item.VagaId })" class="btn btn-warning btn-xs">
                                <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
                                Triagem
                            </a>
                        }

                        @if (item.Candidatos.Count() > 0)
                        {
                            <a href="@Url.Action("Relatorio", "Vaga", new { id = item.VagaId })" class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                                Relatório
                            </a>
                        }

                    </td>
                </tr>
            }
        }
    </tbody>


</table>
