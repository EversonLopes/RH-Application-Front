@model RHAplicacaoFront.Models.Vaga

@{
    ViewBag.Title = "Detalhes da Vaga";
}

<br />
<h2>Detalhes da Vaga</h2>
<br />

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.VagaId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VagaId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DescricaoVaga)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescricaoVaga)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        @if (Model.CheckBoxItems.Count > 0)
        {
            <dt>
                <label>Tecnologias</label>
            </dt>
            foreach (var item in Model.CheckBoxItems)
            {
                if (item.Checked == true)
                {
                    <dd style="height:20px !important">
                        @Html.DisplayFor(model => item.ItemName)
                    </dd>
                }
            }
        }
    </dl>
</div>
<p>
    <a href="@Url.Action("Index", "Vaga")" class="btn btn-primary btn-xs">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Voltar
    </a>
    <a href="@Url.Action("Edit", "Vaga", new { id = Model.VagaId })" class="btn btn-success btn-xs">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Editar
    </a>
</p>
